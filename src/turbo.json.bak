{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"bundle": {
			"dependsOn": ["^build", "@acode/vscode-webview#build"],
			"outputs": ["dist/**"]
		},
		"vsix": {
			"dependsOn": ["bundle"],
			"inputs": ["dist/**"],
			"outputs": ["../bin/**"]
		},
		"watch:bundle": {
			"dependsOn": ["@acode/build#build", "@acode/types#build"],
			"cache": false
		}
	}
}
